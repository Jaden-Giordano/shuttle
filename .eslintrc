extends: eslint:recommended
parserOptions:
  parser: babel-eslint
  ecmaVersion: 6
  sourceType: module
  ecmaFeatures:
    modules: true
rules:
  indent:
    - error
    - 2
  linebreak-style:
    - error
    - unix
  quotes:
    - error
    - single
  semi:
    - error
    - always
  no-console: off
globals:
  window: false
  Phaser: false
  __dirname: false
  process: false
  console: false
